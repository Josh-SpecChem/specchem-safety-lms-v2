# Auto detect text files and perform LF normalization
* text=auto

# Explicitly set line endings for specific files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.sql text eol=lf

# Windows batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary

# Lock files should not be modified
pnpm-lock.yaml -diff -merge
package-lock.json -diff -merge
yarn.lock -diff -merge

# Linguist overrides (for GitHub language detection)
*.sql linguist-detectable=true
*.md linguist-documentation
docs/** linguist-documentation


